.section-main
	.container
		.row
			.review
				.symbol
					img.avatar.avatar-lg(src="app/img/logo-color.svg" alt="")
					span.badge.badge-success 1.0.1
				h2.review__title A project management template for Bootstrap 4
				p.content Pipeline is a collection of modular components and layouts for building project management and collaboration web apps.
				.review__link
					ul.dropdown__list
						li.dropdown__item
							a.dropdown__link.js-showmenu(href="#") explore pages
							ul.dropdown__child.js-submenu
								li 
									a.dropdown__link(href="#") app pages
								li
									a.dropdown__link(href="#") utility pages
						li.dropdown__item
							a.dropdown__link.js-showmenu(href="#") view components
							ul.dropdown__child.js-submenu
								li 
									a.dropdown__link(href="#") bootstrap components
								li
									a.dropdown__link(href="#") pipeline components
			.management
				.carousel
					.carousel__item.js-slider1
						a(href="#"): img.img-fluid(src="app/img/nav-side-team.png")
					each val in ["app/img/nav-side-team.png","app/img/nav-side-project.png","app/img/nav-side-task.png","app/img/nav-side-kanban-board.png","app/img/nav-side-chat.png","app/img/nav-side-user.png"]
						.carousel__item.disable.js-slider1
							a(href="#"): img.img-fluid(src= val)
				.intro 
					i.material-icons supervised_user_circle
					h3.management__title.title Project Management Pages
					p.content Pipeline makes building project management interfaces simple with pages for teams, projects, tasks, kanban boards and more.
					ul.dropdown__list
						li.dropdown__item
							a.dropdown__link(href="#") app pages
						li.dropdown__item
							a.dropdown__link(href="#") utility pages		
			.modular
				.carousel
					.carousel.side
						.carousel-inner
							.carousel__item.js-slider2
								a(href="#"): img.img-fluid(src="app/img/avatar.png")
							each val in ["app/img/avatar-list.png","app/img/avatar-list.png","app/img/avatar.png","app/img/card-note.png"]
								.carousel__item.disable.js-slider2
									a(href="#"): img.img-fluid(src= val)
						.carousel-inner
							.carousel__item.js-slider3
								a(href="#"): img.img-fluid(src="app/img/avatar.png")
							each val in ["app/img/nav-side-chat.png","app/img/avatar.png","app/img/avatar-list.png"]
								.carousel__item.disable.js-slider3
									a(href="#"): img.img-fluid(src= val)
				.intro 
					i.material-icons widgets
					h3.modular__title.title Modular Components
					p.modular__content.content Build feature-rich pages with everything Bootstrap 4.1.3 has to offer and extend functionality with Pipeline's suite of stylish custom components.
					ul.dropdown__list
						li.dropdown__item
							a.dropdown__link(href="#") pipeline component
						li.dropdown__item
							a.dropdown__link(href="#") bootstrap components
			.flexible
				.flex__desc
					.col-4
						img.img-fluid(src="app/img/layout-nav-side.svg" alt="")
					.col-4
						img.img-fluid(src="app/img/layout-nav-top.svg" alt="")
					.col-4
						img.img-fluid(src="app/img/layout-nav-top.svg" alt="")
				.intro
					i.material-icons view_quilt
					h3.modular__title.title Flexible Layouts
					p.modular__content.content Pipeline offers three distinct layouts to suit a variety of content types. Layouts are fully responsive and scale elegantally for different devices and screen sizes.
					.link-shortcut
						a(href="#") explore layouts
			.familiar
				.familiar__desc
					.col-3
						img.img-fluid(src="app/img/logo-bootstrap.svg" alt="")
					.col-3
						img.img-fluid(src="app/img/logo-gulp.svg" alt="")
					.col-3
						img.img-fluid(src="app/img/logo-sass.svg" alt="")
					.col-3  
						img.img-fluid(src="app/img/logo-npm.svg" alt="")
				.intro
					i.material-icons build
					h3.modular__title.title Familiar Tooling
					p.modular__content.content Pipeline employs industry-standard development tools with an intuitive workflow designed to get you up and runnning faster.
					.link-shortcut
						a(href="#") view document